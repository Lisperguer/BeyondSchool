<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Add a review to <%= @car %></h3>
        <%= simple_form_for [@car, @booking] do |f| %>
          <%= f.input :fecha_inicio, placeholder: 'Fecha de inicio' %>
          <%= f.input :fecha_fin, placeholder: 'Fecha de cierre' %>

          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>

</div>
