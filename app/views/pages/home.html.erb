
<div class="banner" style="background-image: url('/assets/fondo')">
  <div class="container_uno">
    <h1>La comodidad de viajar en auto va contigo</h1>
    <p>Reserva tu auto y ten una experiencia incre√≠ble</p>
    <a href="#" class="btn-banner"> <%= link_to "Ver Autos disponibles" , cars_path,class: 'btn btn-secondary' %></a>
  </div>
</div>

<div class="container" id="containerhome">
  <% @cars.each do |car| %>
    <% if car.disponible  %>
      <div class="card" style="width: 18rem;">
        <%= cl_image_tag car.photo.key, class: "card-img-top"%>

        <div class="card-body">
          <h5 class= "card-title"><%= car.modelo %></h5>
          <p class="card-text"><i class="fa-solid fa-location-dot"></i>  <%= car.ubicacion %></p>
          <p class="card-text"><i class="fa-solid fa-users"></i>  <%= car.capacidad %></p>
          <p class="card-text"><strong>$  <%= car.precio %></strong></p>
            <div class="buttons d-flex">
            <% if user_signed_in? %>
              <%= link_to "Alquilar", new_car_booking_path(car), class: "btn btn-outline-primary"  %>
              <%= link_to "Ver detalles", car_path(car), class: "btn btn-outline-primary"  %>
            <% else %>
              <%= link_to "Alquilar", new_user_session_path, class:"btn btn-outline-primary" %>
              <%= link_to "Ver detalles", new_user_session_path, class:"btn btn-outline-primary" %>
            <% end %>
            </div>
        </div>

      </div>
    <% end %>
  <% end %>
</div>
