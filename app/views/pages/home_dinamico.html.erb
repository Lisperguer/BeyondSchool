<div class="container">
 <% @cars.each do |car|%>
<div class="d-flex">
  <div class="card" style="width: 18rem;">
    <img src="https://images.unsplash.com/photo-1646161535915-4b9701625ba5?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2071&q=80" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title"> <%= @car.name %></h5>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><i class="fa-solid fa-location-dot"></i> <%= @car.ubicacion %></li>
      <li class="list-group-item">
      <i class="fa-solid fa-users"></i>
      <%= car.capacidad %></li> 
      <li class="list-group-item price"><strong><%= @car.precio %></strong></li>
    </ul>
    <div class="card-body">
      <a href="#" class="card-link btn btn-success">Book this car</a>
      <a href="#" class="card- btn btn-outline-success btn-sm">View details</a>
    </div>
  </div>
<% end %>
