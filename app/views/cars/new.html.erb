<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new car</h3>
        <%= simple_form_for @car do |f| %>
          <%= f.input :modelo %>
          <%= f.input :anio %>
          <%= f.input :precio %>
          <%= f.input :ubicacion %>
          <%= f.input :detalles %>
          <%= f.input :capacidad %>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  <%= link_to "Volver", cars_path, class: 'btn btn-primary btn-sm'%>
  </div>
</div>
