<h1 class="p-3"> Mis Autos </h1>
  <div class="p-3">
    <%= link_to "Agrega tu auto", new_car_path, class: 'btn btn-outline-secondary' %>
  </div>

<%#  <%= link_to "delete this list", list_path(@list), method: :delete, class: "btn btn-cancel", data: { confirm: "Are you sure you want to delete this list?" } %>

<div class="container">

  <% @cars.each do |car| %>
    <div class="card" style="width: 18rem;">
       <% if car.photo.key %>
        <%= cl_image_tag car.photo.key%>
      <% end%>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><strong><%= link_to car.modelo.capitalize, car_path(car), class: 'btn btn-outline-secondary' %></strong></li>
        <li class="list-group-item"><%= link_to "Edit", edit_car_path(car), class: 'btn btn-outline-secondary' %></li>
        <li class="list-group-item"><%= link_to "Destroy", car_path(car), method: :delete, data: { confirm: "Are you sure you want to delete this car?" }, class: 'btn btn-outline-secondary'%></li>
      </ul>
    </div>
  <% end %>
</div>
